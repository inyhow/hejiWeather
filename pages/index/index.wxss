  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  padding: 20rpx 0;
  margin: 0 30rpx;

}
.lifeIndex  .item:last-child {
  border-bottom: none;
}
.lifeIndex  .item .right {

  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;

}
.lifeIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.lifeIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}